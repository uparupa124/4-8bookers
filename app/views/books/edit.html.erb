<h1>Editing Book</h1>


<%# ここからエラーメッセージ %>
<div class="error">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
  <%# ここまでエラーメッセージ %>
<div class="form">
 <%= form_with model:@book, local:true do |f| %>
   <h4>Title</h4>
     <%= f.text_field :title %>
   <h4>Body</h4>
     <%= f.text_area :body %>
      <br><%= f.submit "Update Book" %>
 <% end %>
</div>

<div class="edit-link">
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "Back", books_path %>
</div>